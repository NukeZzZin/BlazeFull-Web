{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "esnext",
    "outDir": "build",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol",
      "DOM"
    ],
    "allowJs": true,
    "declaration": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
